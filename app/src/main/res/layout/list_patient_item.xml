<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/fab_margin">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/small_text_margin"
        android:layout_toStartOf="@+id/status"
        android:textStyle="bold"
        tools:text="Navya Patel" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_alignStart="@id/name"
        android:layout_marginTop="@dimen/small_text_margin"
        android:layout_marginBottom="@dimen/small_text_margin"
        android:layout_toStartOf="@+id/status"
        android:singleLine="true"
        tools:text="50 years old" />

    <TextView
        android:id="@+id/pob"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/age"
        android:layout_alignStart="@id/name"
        android:layout_marginTop="@dimen/small_text_margin"
        android:layout_toStartOf="@+id/status"
        tools:text="Berumda, Triangle" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:textColor="@color/low_risk"
        android:text="@string/low_risk" />
</RelativeLayout>
